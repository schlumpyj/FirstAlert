<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/incident_type_icon_size"
            android:layout_height="@dimen/incident_type_icon_size"
            android:tint="#FF0000"
            android:id="@+id/fire_icon"
            android:layout_marginTop="@dimen/text_margin"
            android:src="@drawable/ic_firefighter"/>

        <ImageView
            android:layout_width="@dimen/incident_type_icon_size"
            android:layout_height="@dimen/incident_type_icon_size"
            android:tint="#0000ff"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:id="@+id/police_icon"
            android:layout_marginTop="@dimen/text_margin"
            android:src="@drawable/ic_police"/>

        <ImageView
            android:layout_width="@dimen/incident_type_icon_size"
            android:layout_height="@dimen/incident_type_icon_size"
            android:tint="#FF0000"
            android:layout_marginLeft="3dp"
            android:id="@+id/emt_icon"
            android:layout_marginTop="@dimen/text_margin"
            android:src="@drawable/ic_emt"/>

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:textAppearance="?attr/textAppearanceListItem" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/brief_notes"/>
    </LinearLayout>
</LinearLayout>